{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Editar postagem:</h4>
        <form action="/admin/posts/edit"method="POST">
            <input type="hidden" name="id"value="{{posts._id}}">
            <label for="titulo">Título: </label>
            <input value="{{posts.titulo}}"type="text" name="titulo" class="form-control"required>
            <label for="slug">Slug: </label>
            <input value="{{posts.slug}}"type="text" name="slug" class="form-control"required>
            <label for="descricao">Descrição: </label>
            <input value="{{posts.descricao}}"type="text" name="descricao" class="form-control"required>
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo"class="form-control"required>{{posts.conteudo}}</textarea>
            <label for="categoria">Categoria</label>
            <select class="custom-select"name="categoria">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada!</option>
                {{/each}}
            </select>
            <button type="submit"class="btn btn-success mt-3">Editar Postagem</button>
        </form>
    </div>
</div>