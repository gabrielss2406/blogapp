<h2>Lista de Categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success mb-4">Nova Categoria</button></a>

{{#each categorias}}
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">{{nome}}</h4>
            <h6 class="card-subtitle mb-2 text-muted">Slug: {{slug}}</h6>
            <p class="card-text">Data de criação: {{#formatDate date }}{{/formatDate}}</p>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-primary mt-2">Editar categoria</button></a>
            <form action="/admin/categorias/deletar" method="post">
                <input value="{{_id}}"type="hidden" name="id">
                <button type="submit"class="btn btn-danger mt-2">Deletar categoria</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria encontrada!</h4>
{{/each}}